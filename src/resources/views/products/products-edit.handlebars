<div class="mt-4">
    <div class="row">
        <h2>Chỉnh Sửa Thông Tin Sản Phẩm</h2>
        <form method="POST" action="/products/{{product._id}}?_method=PUT" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="name" class="form-label">Tên Sản Phẩm</label>
                <input type="text" class="form-control" value="{{product.name}}" id="name" name="name">
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Mô tả sản phẩm</label>
                <textarea class="form-control" id="description" name="description">{{product.description}}</textarea>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="price" class="form-label">Giá sản phẩm</label>
                    <input type="text" class="form-control" value="{{product.price}}" id="price" name="price">
                </div>
                <div class="col-md-6">
                    <label for="origin" class="form-label">Xuất xứ</label>
                    <input type="text" class="form-control" value="{{product.origin}}" id="origin" name="origin">
                </div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Hình ảnh SP</label>
                <input type="file" class="form-control" id="image" name="image">
                <img src="/img/{{product.image}}" class="img-fluid mt-2" alt="Product Image">
            </div>
            <button type="submit" class="btn btn-primary">Lưu lại</button>
        </form>
    </div>
</div>

<style>
.img-fluid {
    max-width: 100px; /* Đặt kích thước phù hợp */
    height: auto;
    display: block;
    margin-top: 10px;
}
.card-space {
    display: flex;
    justify-content: space-between;
}
.card-price, .card-origin {
    width: 48%;
}
.form-label {
    font-weight: bold;
}
.form-control {
    margin-bottom: 10px;
}
</style>
